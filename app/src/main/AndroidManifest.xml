<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceTracker"
        tools:targetApi="31">
        
        <!-- Safe Jetpack Compose Finance Tracker App -->
        <activity
            android:name=".SafeComposeMainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Minimal Safe Activity for Testing -->
        <activity
            android:name=".MinimalSafeActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceTracker" />
        
        
        <!-- Original XML-based MainActivity (backup) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceTracker" />
        
        <!-- Full Featured Jetpack Compose Main Activity (backup) -->
        <activity
            android:name=".FullComposeMainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceTracker" />
        
        <!-- Simple version for testing -->
        <activity
            android:name=".SimpleComposeActivity"
            android:exported="false"
            android:theme="@style/Theme.FinanceTracker" />
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.ComposeAuthActivity"
            android:exported="false"
            android:theme="@style/Theme.FinanceTracker" />
            
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />
            
        <!-- Test Activities -->
        <activity
            android:name=".TestMainActivity"
            android:exported="false"
            android:theme="@style/Theme.FinanceTracker" />
            
        <activity
            android:name=".WorkingComposeMainActivity"
            android:exported="false"
            android:theme="@style/Theme.FinanceTracker" />
        
    </application>

</manifest>