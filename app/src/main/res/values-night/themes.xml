<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Assignment2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary colors for dark theme -->
        <item name="colorPrimary">@color/primary_green_light</item>
        <item name="colorPrimaryVariant">@color/primary_green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_blue_light</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Dark surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>